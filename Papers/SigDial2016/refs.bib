author = {Harnad, Stevan},
eprint = {9906002},
file = {:home/casey/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Harnad - 1990 - The Symbol Grounding Problem.pdf:pdf},
journal = {Physica D},
pages = {335--346},
primaryClass = {cs},
title = {{The Symbol Grounding Problem}},
