journal = {Lingua},
keywords = {Argument Dependency Model,Event-related brain potentials,Language architecture,Language comprehension,Morphological case,Thematic hierarchy},
number = {9-10},
pages = {1213--1234},
title = {{On incremental interpretation: Degrees of meaning accessed during sentence comprehension}},
