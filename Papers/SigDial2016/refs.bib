number = {1},
pages = {188--204},
pmid = {20160299},
title = {{An adaptive algorithm for fixation, saccade, and glissade detection in eyetracking data.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/20160299},
volume = {42},
year = {2010}
}
