@article{Lucking2013,
abstract = {The semiotic function of co-verbal pointing is a much debated issue.$\backslash$nWe investigate the semantics and pragmatics of co-verbal pointing$\backslash$nfrom a foundational perspective combining experiments, statistical$\backslash$ninvestigation, computer simulation and theoretical modelling techniques$\backslash$nin a novel manner. At the outset, an overview of approaches to pointing$\backslash$nin various Cognitive Sciences is given. Using inter alia assumptions$\backslash$nof Ludwig Wittgenstein, David Kaplan, and Donald Davidson, we establish$\backslash$nsemantic and pragmatic hypotheses concerning the role of pointing$\backslash$nin multi-modal expressions. The semantic hypotheses say: Pointing$\backslash$nuniquely picks out the object referred to. In contrast, the first$\backslash$npragmatic hypothesis maintains that the object pointed at is identified$\backslash$nby a default inference: Since “picking out” implements the idea of$\backslash$nan assignment or an interpretation function that is how we determine$\backslash$nthe difference between semantics and pragmatics. The second pragmatic$\backslash$nhypothesis only attributes a global pragmatic function to pointing,$\backslash$nnamely, that of shifting the focus of attention, which can be viewed$\backslash$nas a precondition for triggering the default inference. We evaluate$\backslash$nthe hypotheses with an annotated and rated corpus of object identification$\backslash$ngames set up in experiments in which body movement tracking techniques$\backslash$nhave been extensively used to generate precise pointing measurements.$\backslash$nDiscussion of hypotheses is based on two models to conceptualize$\backslash$npointing, a ‘pointing ray’ model and a ‘pointing cone’ model. Statistical$\backslash$ninvestigation and computer simulations show that especially distal$\backslash$nareas in the pointing domain falsify the semantic hypotheses. The$\backslash$npragmatic hypotheses win: reference involving pointing rests on a$\backslash$ndefault inference which we specify using the empirical data. The$\backslash$nresults raise numerous problems for classical semantics-pragmatics$\backslash$ninterfaces brought to the fore in the penultimate section, where$\backslash$nwe argue for pre-semantic$\backslash$n$\backslash$npragmatics as well as post-semantic Gricean pragmatics. Finally, we$\backslash$ndiscuss how our empirical pointing model fits into non-classical$\backslash$n(i.e., “situated”) semantics-pragmatics interfaces. It provides an$\backslash$naccount for certain reference conceptions held in Relevance Theory$\backslash$nas well as in Situation Semantics.},
author = {L\"{u}cking, Andy and Pfeiffer, Thies and Rieser, Hannes},
file = {:home/casey/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/L\"{u}cking, Pfeiffer, Rieser - 2013 - Pointing and Reference Reconsidered.pdf:pdf},
journal = {International Journal of Corpus Linguistics},
keywords = {computer simulation,motion capturing,pointing,pointing cone,reference,semantics--pragmatics interface},
pages = {1--51},
